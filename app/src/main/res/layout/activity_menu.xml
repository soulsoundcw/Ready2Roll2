<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/steak"
        android:background="@drawable/chzstk"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CheeseSteak: \n grilled steak, cheese, cabbage,\n carrots "
        android:id="@+id/textView"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/steak"
        android:layout_toRightOf="@+id/steak"
        android:layout_toEndOf="@+id/steak"
        android:layout_above="@+id/chicken" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chicken"
        android:background="@drawable/chkstk"
        android:layout_below="@+id/steak"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ChickenSteak: \n grilled chicken breast, cheese,\n cabbage, carrots"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/chicken"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buffalo"
        android:background="@drawable/buffalo"
        android:layout_below="@+id/chicken"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Buffalo Chicken:\n grilled buffalo chicken breast,\n crumbled bleu cheese,\n cabbage, carrots"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/buffalo"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baconchz"
        android:background="@drawable/baconchz"
        android:layout_below="@+id/buffalo"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bacon Cheeseburger:\n chopped ground beef, cheese,\n bacon, cabbage, carrots"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/baconchz"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apple"
        android:background="@drawable/apple"
        android:layout_below="@+id/baconchz"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cinnamon Apple:\n red and golden delicious\n apples, cinnamon, sugar"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/apple"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peach"
        android:background="@drawable/peach"
        android:layout_below="@id/apple"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Peach Cobbler:\n peaches, pears, cinnamon,\n sugar with a hint of vanilla"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/peach"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    </RelativeLayout>
</ScrollView>
